<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:background="@drawable/first_selaction_page"
    >


    <TextView
        android:id="@+id/upnic"
        android:layout_width="309dp"
        android:layout_height="58dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rounded_cover"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/upname"
        android:layout_width="309dp"
        android:layout_height="58dp"
        android:layout_below="@+id/upsearchbtn"

        android:layout_alignParentStart="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_cover"
        android:ems="10"
        android:hint="User name"
        android:inputType="text" />

    <EditText
        android:id="@+id/upemail"
        android:layout_width="309dp"
        android:layout_height="58dp"
        android:layout_below="@+id/upname"

        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_cover"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="text" />

    <EditText
        android:id="@+id/upphone"
        android:layout_width="309dp"
        android:layout_height="58dp"
        android:layout_below="@+id/upemail"

        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/rounded_cover"
        android:ems="10"
        android:hint="phone number"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="327dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="114dp"
        android:layout_marginBottom="22dp"
        android:fontFamily="cursive"
        android:text="User Profile"
        android:textColor="#E2882E"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="66dp" />

    <Button
        android:id="@+id/upsearchbtn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upnic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#00093660"
        android:text="View Detils"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/upupdatebtn"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upphone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="#093660"
        android:text="Update" />

    <Button
        android:id="@+id/Updeletebtn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upphone"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="18dp"
        android:layout_toEndOf="@+id/upupdatebtn"
        android:backgroundTint="#093660"
        android:text="Delete" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="199dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/userprofile" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="196dp"
        android:fontFamily="cursive"
        android:text="Welcome"
        android:textColor="#E60D0D"
        android:textSize="48sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/Statbtn"
        android:layout_width="260dp"
        android:layout_height="59dp"
        android:layout_below="@+id/Updeletebtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#093660"
        android:text="Stats"
        android:textColorLink="#093660" />


</RelativeLayout>