<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgetpw"
    android:background="@drawable/first_selaction_page">

    <Button
        android:id="@+id/fresetpw"
        android:layout_width="326dp"
        android:layout_height="98dp"
        android:layout_below="@+id/cpass"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#043B73"
        android:text="Reset Password"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/fpass"
        android:layout_width="312dp"
        android:layout_height="63dp"
        android:layout_below="@+id/fnic"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_cover"
        android:ems="10"
        android:hint="Enter your New password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/cpass"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:layout_below="@+id/fpass"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/rounded_cover"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/fnic"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_cover"
        android:ems="10"
        android:hint="Enter your Nic"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="107dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="-39dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="sans-serif"
        android:text="Fogot Password"
        android:textColor="#C28036"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="273dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="67dp"
        app:srcCompat="@drawable/fopw" />

    <ImageView
        android:id="@+id/imageView63"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/pw" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="65dp"
        android:layout_height="68dp"
        android:layout_below="@+id/imageView63"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/pw" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="63dp"
        android:layout_height="73dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/nic" />

</RelativeLayout>
